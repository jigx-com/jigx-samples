title: Country List
description: List of countries and their flags
type: jig.list
icon: world

data: =@ctx.datasources.country-data-static
item:
  type: component.list-item
  options:
    title: =@ctx.current.item.title
    subtitle: =@ctx.current.item.value
    leftElement: 
      element: icon
      icon: =@ctx.current.item.icon