        #   color: warning
        # - y: 2
        #   color: error
        # - y: 2
        #   color: primary
        # - y: 2
        #   color: secondary

children:
  - type: component.pie-chart
    options:
      yAxis:
        labels:
          format:
            unitDisplay: long
      chart:
        height: 150
        # try to change text for a title
        title:
          text: Color
          verticalAlign: center

        # change text for subtitle
        subtitle:
          text: Palette
          verticalAlign: center

      legend:
        isHidden: false
      series:
        - data: =@ctx.datasources.colors
          dataLabels:
            - isEnabled: true
