title: Multiple series dynamic
type: jig.default

children:
  - type: component.bar-chart
    options:
      chart:
        height: 250
      yAxis:
        max: 25
      xAxis:
        categories:
          - 'Sample Data'
      series:
        - data: =@ctx.datasources.series1-dynamic.data
        - data: =@ctx.datasources.series2-dynamic.data
        - data: =@ctx.datasources.series3-dynamic.data
    
          
