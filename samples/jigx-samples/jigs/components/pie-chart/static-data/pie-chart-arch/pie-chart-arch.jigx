title: Arch pie chart
type: jig.default

children:
  - type: component.pie-chart
    options:
      chart:
        title:
          text: Stock
          verticalAlign: center
        width: 180
        height: 180
      legend:
          isHidden: true
      series:
          - data: =@ctx.datasources.arch-pie-chart
            dataLabels:
              - isEnabled: true
            layout: arch
          
widgets:
  2x2:
    type: widget.group
    options:
      children:
        - type: widget.chart
          options:
            chart:
              type: component.pie-chart
              options:
                chart:
                  title:
                    text: Stock
                    verticalAlign: center
                  width: 120
                  height: 120
                legend:
                  isHidden: true
                series:
                  - data: =@ctx.datasources.arch-pie-chart
                    dataLabels:
                    - isEnabled: true
                    layout: arch