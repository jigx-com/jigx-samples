title: Confirm example
type: jig.default
description: When you submit the form, the modal confirming if you wish to proceed will pop up and if the submission will be successful the confirm action will pop up.

actions:
  - children:
      - type: action.confirm
        options:
          title: Update employee
          isConfirmedAutomatically: false
          modal:
            title: Update employee
            description: Are you sure you want to update the employee details?
            confirm: 'Update'
            cancel: 'Cancel'
          onConfirmed: 
            type: action.submit-form
            options:
              formId: simple-form
              provider: DATA_PROVIDER_DYNAMIC
              entity: default/formm
              method: save
              goBack: stay

children:
  - type: component.form
    instanceId: simple-form
    options:
      children:
        - type: component.text-field
          instanceId: firstname
          options:
            label: First name
        - type: component.text-field
          instanceId: lastname
          options:
            label: Last name
        - type: component.text-field
          instanceId: phone
          options:
            label: Phone number
            keyboardType: decimal-pad