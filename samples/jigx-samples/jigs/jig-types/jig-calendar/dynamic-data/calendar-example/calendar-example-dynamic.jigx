title: Calendar
type: jig.calendar

data: =@ctx.datasources.calendar-data-dynamic
item:
  type: component.event
  options:
    from: 
      text: =$fromMillis($toMillis($now()) + ($number(@ctx.current.item.time)- 1) * 3600000)
      format:
        dateFormat: lll
    to: 
      text: =$fromMillis($toMillis($now()) + $number(@ctx.current.item.time) * 3600000)
      format:
        dateFormat: lll
    title: =@ctx.current.item.title
    location:  =@ctx.current.item.location
    tags: "=[{'title': @ctx.current.item.tags, 'color': @ctx.current.item.color}]"
    people: "=[{'fullName':@ctx.current.item.fullname, 'avatarUrl': @ctx.current.item.avatar}]"